<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DispensePro" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorOnPrimary">@color/app_color</item>
        <item name="colorPrimaryContainer">@color/app_color</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/app_bg</item>

        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/app_bg</item>
    </style>

    <!-- App Theme -->
    <style name="Theme.DispensePro" parent="Base.Theme.DispensePro" />

    <!-- Dialog Theme -->
    <style name="CustomDialogTheme" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="Theme.MyApp.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_background</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/app_color</item>
    </style>
    <style name="CircleImage" parent="">
        <item name="cornerSize">50%</item>
    </style>



    <style name="TransparentBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/app_color</item>
    </style>


    <style name="TransparentBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheetStyle</item>
        <!-- Apply custom button style properly -->
        <item name="android:buttonStyle">@style/MyButtonStyle</item>
        <item name="materialButtonStyle">@style/MyButtonStyle</item>
        <item name="buttonStyle">@style/MyButtonStyle</item>
        <item name="buttonStyleSmall">@style/MyButtonStyle</item>
    </style>

    <style name="TransparentDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="SubmitButtonStyle" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/btn_submit</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="NextButtonStyle" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/btn_next</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">12dp</item>
    </style>
</resources>