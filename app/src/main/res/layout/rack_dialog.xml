<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.85">

        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="4"
            android:horizontalSpacing="4dp"
            android:verticalSpacing="4dp"
            android:stretchMode="columnWidth"
            android:background="@color/rack_bg"
            android:layout_weight="2"/>
        <!-- Right side: RecyclerView for A-Z -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewAlphabet"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:background="@color/pending" />

    </LinearLayout>

<RelativeLayout
    android:id="@+id/liBottomActions"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="horizontal"
    android:padding="5dp"
    android:layout_weight="0.15">
   <ImageView
       android:id="@+id/ivBack"
       android:layout_width="30dp"
       android:layout_height="30dp"
       android:src="@drawable/baseline_arrow_back_24"
       app:tint="@color/black"
       android:layout_alignParentStart="true"
       android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/ivAddLabel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/add_label_24"
            android:layout_marginEnd="5dp"/>
        <TextView
            android:id="@+id/tvLabelCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* 2"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"/>
        <ImageView
            android:id="@+id/ivAddDrug"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_medication_24"
            android:layout_marginEnd="5dp"/>
        <TextView
            android:id="@+id/tvDrugCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* 2"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/ivPrecription"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_receipt_24"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>



</LinearLayout>