<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lessonBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <!-- Content container with rounded top corners -->
    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bottom_sheet_background"
        android:padding="16dp"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/tvLessonTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lesson Title"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvLessonInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lesson Info"
            android:layout_marginTop="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartLesson"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="@string/let_s_start"
            android:textColor="@android:color/white"
            android:textAllCaps="false" />
    </LinearLayout>

    <!-- Floating circular icon -->
    <ImageView
        android:id="@+id/ivRegister"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/baseline_add_circle_outline_24"
        android:layout_gravity="end"
        android:background="@drawable/rounded_circle"
        android:elevation="10dp"
        android:padding="10dp"
        android:visibility="gone"/>
</FrameLayout>
